<div class="main">
<h1>投稿一覧</h1>
  <div class="card-body">
        <%= form_with method: "get", local: true do |f| %>
            <div class="form-row">
                <div class="col">
                    <%= f.text_field "date", placeholder: "日付を入力" %>
                </div>
                <div class="col">
                    <%= f.submit "検索", class: "btn btn-primary" %>
                </div>
            </div>
        <% end %>
 </div>
        
<table class= "table table-striped">
    <thead class="thead-dark">
   <tr>
    <th>ユーザーID</th> 
    <th>内容</th>
    <th>ボタン</th>
   </tr>
   </thead>
 
 <% @posts.each do |post| %>
     <tr>
        <td><%= post.user_id %></td>
        <td><%= post.content %></td> 
        <td>
        <%= form_with method: "get", local: true do |f| %>
            <%= f.submit "いいね", class: "btn btn-primary" %>
            <%= f.submit "フォロー" , class: "btn btn-primary" %>
        <% end %>
        </td>
    </tr>
<% end %>

</div>