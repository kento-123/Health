
<h1>測定結果入力</h1>

<%= form_with model: @physical, local: true do |f| %>
    <div class="form-group">
        <label>前回体重</label>
        <%= @physical.before_weight %>
    </div>
    <div class="form-group">
        <label>体重</label>
        <%= f.number_field :weight, placeholder: "kg", class: "form-control" %>
    </div>
        <div class="form-group">
        <label>体脂肪率</label>
        <%= f.number_field :fat_percentage, placeholder: "%", class: "form-control" %>
    </div>
    <div class="form-group">
        <label>筋肉量</label>
        <%= f.number_field :muscle, placeholder: "kg", class: "form-control" %>
    </div>
    <div class="form-group">
        <label>基礎代謝</label>
        <%= f.number_field :metabolism, placeholder: "kcal", class: "form-control" %>
    </div>
    <%= link_to "戻る", posts_path, class: "btn btn-secondary" %>
    <%= f.submit "登録", class: "btn btn-primary"%>

<% end %>
